<Layout page="members">
  <!-- ===============================
       HERO SECTION
       =============================== -->
  <section
    class="relative w-full h-[60vh] flex items-center justify-center overflow-hidden"
  >
    <!-- Background Image -->
    <img
      src="../assets/images/membership-hero.jpg"
