<!-- ===============================
     LANGUAGE TOGGLE SCRIPT
     =============================== -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const buttons = document.querySelectorAll(".lang-btn");
    const contentHindi = document.getElementById("contentHindi");
    const contentEnglish = document.getElementById("contentEnglish");
    const btnHi = document.getElementById("btnHindi");
    const btnEn = document.getElementById("btnEnglish");

    function showLang(lang) {
      if (lang === "hindi") {
        contentHindi.classList.remove("hidden");
        contentEnglish.classList.add("hidden");
        btnHi.classList.add("bg-accent", "text-primary");
        btnHi.classList.remove("bg-transparent", "text-accent");
        btnEn.classList.add("bg-transparent", "text-accent");
        btnEn.classList.remove("bg-accent", "text-primary");
      } else {
        contentEnglish.classList.remove("hidden");
        contentHindi.classList.add("hidden");
        btnEn.classList.add("bg-accent", "text-primary");
        btnEn.classList.remove("bg-transparent", "text-accent");
        btnHi.classList.add("bg-transparent", "text-accent");
        btnHi.classList.remove("bg-accent", "text-primary");
      }
    }

    buttons.forEach((btn) => {
      btn.addEventListener("click", () => showLang(btn.dataset.lang));
    });
  });
</script>
