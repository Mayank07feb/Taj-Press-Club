  .lang-tab {
    cursor: pointer;
  }

  .lang-tab.active {
    background: #d97706;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(217, 119, 6, 0.3);
  }

  .lang-tab:hover:not(.active) {
    background: #f3f4f6;
  }

  .read-more-btn:hover {
    box-shadow: 0 6px 20px rgba(217, 119, 6, 0.4);
  }

  .hidden-content {
    display: none;
  }

  .content-section {
    font-family: "Noto Sans Devanagari", sans-serif;
  }

  #englishContent {
    font-family: "Merriweather", serif;
  }
</style>

<script>
  // Language Toggle Functionality
  const englishTab = document.getElementById("englishTab");
  const hindiTab = document.getElementById("hindiTab");
  const englishContent = document.getElementById("englishContent");
  const hindiContent = document.getElementById("hindiContent");

  function switchLanguage(lang) {
    if (lang === "english") {
      englishTab?.classList.add("active");
      hindiTab?.classList.remove("active");
      englishContent?.classList.remove("hidden-content");
      hindiContent?.classList.add("hidden-content");
    } else {
      hindiTab?.classList.add("active");
      englishTab?.classList.remove("active");
      hindiContent?.classList.remove("hidden-content");
      englishContent?.classList.add("hidden-content");
    }
  }

  englishTab?.addEventListener("click", () => switchLanguage("english"));
  hindiTab?.addEventListener("click", () => switchLanguage("hindi"));

  // Read More Toggle - English
  const englishReadMore = document.getElementById("englishReadMore");
  const englishFull = document.getElementById("englishFull");
  const englishBtnText = document.getElementById("englishBtnText");
  const englishBtnIcon = document.getElementById("englishBtnIcon");
  let englishExpanded = false;

  englishReadMore?.addEventListener("click", () => {
    englishExpanded = !englishExpanded;
    if (englishExpanded) {
      englishFull?.classList.remove("hidden-content");
      if (englishBtnText) englishBtnText.textContent = "Read Less";
      englishBtnIcon?.classList.add("rotate-180");
    } else {
      englishFull?.classList.add("hidden-content");
      if (englishBtnText) englishBtnText.textContent = "Read More";
      englishBtnIcon?.classList.remove("rotate-180");
      // Scroll back to preview
      document.getElementById("englishPreview")?.scrollIntoView({
        behavior: "smooth",
        block: "start",
      });
    }
  });

  // Read More Toggle - Hindi
  const hindiReadMore = document.getElementById("hindiReadMore");
  const hindiFull = document.getElementById("hindiFull");
  const hindiBtnText = document.getElementById("hindiBtnText");
  const hindiBtnIcon = document.getElementById("hindiBtnIcon");
  let hindiExpanded = false;

  hindiReadMore?.addEventListener("click", () => {
    hindiExpanded = !hindiExpanded;
    if (hindiExpanded) {
      hindiFull?.classList.remove("hidden-content");
      if (hindiBtnText) hindiBtnText.textContent = "कम पढ़ें";
      hindiBtnIcon?.classList.add("rotate-180");
    } else {
      hindiFull?.classList.add("hidden-content");
      if (hindiBtnText) hindiBtnText.textContent = "और पढ़ें";
      hindiBtnIcon?.classList.remove("rotate-180");
      // Scroll back to preview
      document.getElementById("hindiPreview")?.scrollIntoView({
        behavior: "smooth",
        block: "start",
      });
    }
  });
</script>
