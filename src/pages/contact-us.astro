---
import Layout from "../layouts/Layout.astro";
---

<Layout page="contact">
  <!-- ===============================
       HERO SECTION
       =============================== -->
  <section
    class="relative w-full h-[50vh] flex items-center justify-center overflow-hidden"
  >
    <!-- Background with Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-primary via-primary-hover to-primary"
    >
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-4xl mx-auto px-4 text-center text-white">
      <div class="mb-6">
        <span
          class="inline-block px-5 py-2 bg-accent/20 border-2 border-accent rounded-sm mb-4"
        >
          <span class="text-accent font-bold text-sm tracking-widest uppercase"
            >Get In Touch</span
          >
        </span>
      </div>

      <h1
        class="font-serif text-5xl sm:text-6xl md:text-7xl font-bold mb-6 text-accent"
      >
        Contact Us
      </h1>

      <div class="flex items-center justify-center gap-3 mb-6">
        <div class="w-16 h-px bg-accent"></div>
        <div class="w-3 h-3 rotate-45 bg-accent"></div>
        <div class="w-16 h-px bg-accent"></div>
      </div>

      <p
        class="text-xl sm:text-2xl max-w-2xl mx-auto opacity-95 leading-relaxed"
      >
        Humse judne ke liye, neeche diye gaye tarike se sampark karein
      </p>
    </div>
  </section>

  <!-- ===============================
       DETAILED CONTACT INFO & MAP SECTION
       =============================== -->
  <section class="w-full bg-section-bg py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- LEFT: Detailed Contact Info (replaces form) -->
        <div class="space-y-6">
          <!-- Section Header -->
          <div class="mb-8">
            <div
              class="inline-block px-4 py-1 bg-accent/10 border border-accent/30 rounded-sm mb-4"
            >
              <span
                class="text-accent font-bold text-sm tracking-widest uppercase"
                >Our Details</span
              >
            </div>
            <h2
              class="font-serif text-3xl sm:text-4xl font-bold text-text-heading mb-3"
            >
              Reach Us Directly
            </h2>
            <div class="flex items-center gap-3 mb-4">
              <div class="w-16 h-px bg-accent"></div>
              <div class="w-3 h-3 rotate-45 bg-accent"></div>
              <div class="w-16 h-px bg-accent"></div>
            </div>
            <p class="text-text-body">
              Kisi bhi inquiry ke liye, hum se seedha sampark karein.
            </p>
          </div>

          <!-- Phone Detail Card -->
          <div
            class="bg-white rounded-lg shadow-xl p-7 border-l-4 border-accent hover:shadow-2xl transition-all group"
          >
            <div class="flex items-start gap-5">
              <div
                class="w-14 h-14 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-7 h-7 text-accent"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-serif text-xl font-bold text-text-heading mb-3">
                  Phone
                </h3>
                <div class="space-y-2">
                  <a
                    href="tel:+915622123456"
                    class="flex items-center gap-2 text-primary hover:text-accent transition-colors font-semibold text-lg group/link"
                  >
                    <span class="w-2 h-2 rounded-full bg-accent flex-shrink-0"
                    ></span>
                    +91-562-212-3456
                  </a>
                  <a
                    href="tel:+919876543210"
                    class="flex items-center gap-2 text-primary hover:text-accent transition-colors font-semibold text-lg"
                  >
                    <span class="w-2 h-2 rounded-full bg-accent flex-shrink-0"
                    ></span>
                    +91-98765-43210
                  </a>
                </div>
                <p class="text-text-muted text-sm mt-3 flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Mon - Sat: 10:00 AM - 6:00 PM
                </p>
              </div>
            </div>
          </div>

          <!-- Email Detail Card -->
          <div
            class="bg-white rounded-lg shadow-xl p-7 border-l-4 border-accent hover:shadow-2xl transition-all group"
          >
            <div class="flex items-start gap-5">
              <div
                class="w-14 h-14 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-7 h-7 text-accent"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-serif text-xl font-bold text-text-heading mb-3">
                  Email
                </h3>
                <div class="space-y-2">
                  <a
                    href="mailto:info@tajpressclub.org"
                    class="flex items-center gap-2 text-primary hover:text-accent transition-colors font-semibold break-all"
                  >
                    <span class="w-2 h-2 rounded-full bg-accent flex-shrink-0"
                    ></span>
                    info@tajpressclub.org
                  </a>
                  <a
                    href="mailto:membership@tajpressclub.org"
                    class="flex items-center gap-2 text-primary hover:text-accent transition-colors font-semibold break-all"
                  >
                    <span class="w-2 h-2 rounded-full bg-accent flex-shrink-0"
                    ></span>
                    membership@tajpressclub.org
                  </a>
                </div>
                <p class="text-text-muted text-sm mt-3 flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  We reply within 24 hours
                </p>
              </div>
            </div>
          </div>

          <!-- Visit Us Detail Card -->
          <div
            class="bg-white rounded-lg shadow-xl p-7 border-l-4 border-accent hover:shadow-2xl transition-all group"
          >
            <div class="flex items-start gap-5">
              <div
                class="w-14 h-14 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-7 h-7 text-accent"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-serif text-xl font-bold text-text-heading mb-3">
                  Visit Us
                </h3>
                <address
                  class="not-italic text-text-body leading-relaxed space-y-1"
                >
                  <p class="font-semibold text-text-heading">Taj Press Club</p>
                  <p>Near Taj Mahal,</p>
                  <p>Agra, Uttar Pradesh</p>
                  <p>Pin Code: 282001</p>
                </address>
                <p class="text-text-muted text-sm mt-3 flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                  </svg>
                  Open 6 days a week
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- RIGHT: Map & Additional Info -->
        <div class="space-y-8">
          <!-- Google Map -->
          <div class="bg-white rounded-lg shadow-xl overflow-hidden h-96">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3548.536964537726!2d78.04018931548393!3d27.175144982866!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39747121d702ff6d%3A0xdd2ae4803f767dde!2sTaj%20Mahal!5e0!3m2!1sen!2sin!4v1234567890123!5m2!1sen!2sin"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="w-full h-full"
              title="Taj Press Club Location"></iframe>
          </div>

          <!-- Office Hours -->
          <div
            class="bg-gradient-to-br from-primary to-primary-hover rounded-lg shadow-xl p-8 text-white"
          >
            <h3 class="font-serif text-2xl font-bold mb-6 text-accent">
              Office Hours
            </h3>

            <div class="space-y-4">
              <div
                class="flex justify-between items-center pb-3 border-b border-white/20"
              >
                <span class="font-semibold">Monday - Friday</span>
                <span class="text-accent">10:00 AM - 6:00 PM</span>
              </div>
              <div
                class="flex justify-between items-center pb-3 border-b border-white/20"
              >
                <span class="font-semibold">Saturday</span>
                <span class="text-accent">10:00 AM - 4:00 PM</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-semibold">Sunday</span>
                <span class="text-accent">Closed</span>
              </div>
            </div>

            <div
              class="mt-8 p-4 bg-white/10 rounded-sm border border-accent/30"
            >
              <p class="text-sm italic text-white/90">
                <strong class="text-accent">Note:</strong> Special events aur meetings
                ke liye, kripya pehle se appointment lein.
              </p>
            </div>
          </div>

          <!-- Quick Contact -->
          <div class="bg-white rounded-lg shadow-xl p-8">
            <h3 class="font-serif text-xl font-bold text-text-heading mb-4">
              Quick Contact
            </h3>
            <div class="space-y-3">
              <a
                href="tel:+915622123456"
                class="flex items-center gap-3 text-primary hover:text-accent transition-colors group"
              >
                <div
                  class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center group-hover:bg-accent/20 transition-colors"
                >
                  <svg
                    class="w-5 h-5 text-primary"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <span class="font-semibold">+91-562-212-3456</span>
              </a>

              <a
                href="mailto:info@tajpressclub.org"
                class="flex items-center gap-3 text-primary hover:text-accent transition-colors group"
              >
                <div
                  class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center group-hover:bg-accent/20 transition-colors"
                >
                  <svg
                    class="w-5 h-5 text-primary"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <span class="font-semibold break-all"
                  >info@tajpressclub.org</span
                >
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
