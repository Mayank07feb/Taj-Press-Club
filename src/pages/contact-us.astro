---
import Layout from "../layouts/Layout.astro";
---

<Layout page="contact">
  <!-- ===============================
       HERO SECTION
       =============================== -->
  <section
    class="relative w-full h-[50vh] flex items-center justify-center overflow-hidden"
  >
    <!-- Background with Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-primary via-primary-hover to-primary"
    >
    </div>

    <!-- Decorative Pattern -->
    <div
      class="absolute inset-0 opacity-5"
      style="background-image: url('data:image/svg+xml,%3Csvg width=\"
      60\"
      height='\"60\"'
      viewBox='\"0'
      0
      60
      60\"
      xmlns='\"http://www.w3.org/2000/svg\"%3E%3Cpath'
      d='\"M30'
      0l30
      30-30
      30L0
      30z\"
      fill='\"%23D4AF37\"'
      fill-opacity='\"0.4\"%3E%3C/path%3E%3C/svg%3E&apos;);"'
    >
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-4xl mx-auto px-4 text-center text-white">
      <div class="mb-6">
        <span
          class="inline-block px-5 py-2 bg-accent/20 border-2 border-accent rounded-sm mb-4"
        >
          <span class="text-accent font-bold text-sm tracking-widest uppercase"
            >Get In Touch</span
          >
        </span>
      </div>

      <h1
        class="font-serif text-5xl sm:text-6xl md:text-7xl font-bold mb-6 text-accent"
      >
        Contact Us
      </h1>

      <div class="flex items-center justify-center gap-3 mb-6">
        <div class="w-16 h-px bg-accent"></div>
        <div class="w-3 h-3 rotate-45 bg-accent"></div>
        <div class="w-16 h-px bg-accent"></div>
      </div>

      <p
        class="text-xl sm:text-2xl max-w-2xl mx-auto opacity-95 leading-relaxed"
      >
        Humse judne ke liye, neeche diye gaye tarike se sampark karein
      </p>
    </div>
  </section>

  <!-- ===============================
       CONTACT INFORMATION CARDS
       =============================== -->
  <section class="w-full bg-white py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 -mt-24 relative z-10">
        <!-- Phone Card -->
        <div
          class="bg-white rounded-lg shadow-2xl p-8 border-t-4 border-accent hover:shadow-xl transition-all group"
        >
          <div
            class="w-16 h-16 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <svg
              class="w-8 h-8 text-accent"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Phone
          </h3>
          <div class="text-center space-y-2">
            <a
              href="tel:+915622123456"
              class="block text-primary hover:text-accent transition-colors font-semibold"
            >
              +91-562-212-3456
            </a>
            <a
              href="tel:+919876543210"
              class="block text-primary hover:text-accent transition-colors font-semibold"
            >
              +91-98765-43210
            </a>
          </div>
          <p class="text-text-muted text-sm mt-4 text-center">
            Mon - Sat: 10:00 AM - 6:00 PM
          </p>
        </div>

        <!-- Email Card -->
        <div
          class="bg-white rounded-lg shadow-2xl p-8 border-t-4 border-accent hover:shadow-xl transition-all group"
        >
          <div
            class="w-16 h-16 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <svg
              class="w-8 h-8 text-accent"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Email
          </h3>
          <div class="text-center space-y-2">
            <a
              href="mailto:info@tajpressclub.org"
              class="block text-primary hover:text-accent transition-colors font-semibold break-all"
            >
              info@tajpressclub.org
            </a>
            <a
              href="mailto:membership@tajpressclub.org"
              class="block text-primary hover:text-accent transition-colors font-semibold break-all"
            >
              membership@tajpressclub.org
            </a>
          </div>
          <p class="text-text-muted text-sm mt-4 text-center">
            We reply within 24 hours
          </p>
        </div>

        <!-- Location Card -->
        <div
          class="bg-white rounded-lg shadow-2xl p-8 border-t-4 border-accent hover:shadow-xl transition-all group"
        >
          <div
            class="w-16 h-16 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <svg
              class="w-8 h-8 text-accent"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Visit Us
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Taj Press Club<br />
            Near Taj Mahal,<br />
            Agra, Uttar Pradesh<br />
            Pin Code: 282001
          </p>
          <p class="text-text-muted text-sm mt-4 text-center">
            Open 6 days a week
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ===============================
       CONTACT FORM & MAP SECTION
       =============================== -->
  <section class="w-full bg-section-bg py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-lg shadow-xl p-8 lg:p-12">
          <div class="mb-8">
            <div
              class="inline-block px-4 py-1 bg-accent/10 border border-accent/30 rounded-sm mb-4"
            >
              <span
                class="text-accent font-bold text-sm tracking-widest uppercase"
                >Send Message</span
              >
            </div>
            <h2
              class="font-serif text-3xl sm:text-4xl font-bold text-text-heading mb-3"
            >
              Get in Touch
            </h2>
            <div class="flex items-center gap-3 mb-4">
              <div class="w-16 h-px bg-accent"></div>
              <div class="w-3 h-3 rotate-45 bg-accent"></div>
              <div class="w-16 h-px bg-accent"></div>
            </div>
            <p class="text-text-body">
              Apna message bhejein aur hum jald hi aapse sampark karenge.
            </p>
          </div>

          <form id="contactForm" class="space-y-6">
            <!-- Name -->
            <div>
              <label
                for="name"
                class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
              >
                Full Name <span class="text-accent">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors"
                placeholder="Your name"
              />
            </div>

            <!-- Email -->
            <div>
              <label
                for="email"
                class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
              >
                Email Address <span class="text-accent">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors"
                placeholder="your.email@example.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label
                for="phone"
                class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
              >
                Phone Number
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors"
                placeholder="+91 98765 43210"
              />
            </div>

            <!-- Subject -->
            <div>
              <label
                for="subject"
                class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
              >
                Subject <span class="text-accent">*</span>
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors bg-white"
              >
                <option value="">Select a subject</option>
                <option value="membership">Membership Inquiry</option>
                <option value="events">Events & Seminars</option>
                <option value="general">General Inquiry</option>
                <option value="feedback">Feedback</option>
                <option value="other">Other</option>
              </select>
            </div>

            <!-- Message -->
            <div>
              <label
                for="message"
                class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
              >
                Message <span class="text-accent">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors resize-none"
                placeholder="Apna message yahan likhein..."></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-gradient-to-r from-accent to-accent-hover text-primary font-bold text-lg py-4 rounded-sm hover:shadow-xl transition-all border-2 border-accent flex items-center justify-center gap-3 group"
            >
              <span>Send Message</span>
              <svg
                class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </button>
          </form>

          <!-- Success Message (Hidden by default) -->
          <div
            id="successMessage"
            class="hidden mt-6 p-6 bg-green-50 border-2 border-green-500 rounded-sm"
          >
            <div class="flex items-center gap-3">
              <svg
                class="w-6 h-6 text-green-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="text-green-700 font-semibold">
                Thank you! Your message has been sent successfully.
              </p>
            </div>
          </div>
        </div>

        <!-- Map & Additional Info -->
        <div class="space-y-8">
          <!-- Google Map -->
          <div class="bg-white rounded-lg shadow-xl overflow-hidden h-96">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3548.536964537726!2d78.04018931548393!3d27.175144982866!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39747121d702ff6d%3A0xdd2ae4803f767dde!2sTaj%20Mahal!5e0!3m2!1sen!2sin!4v1234567890123!5m2!1sen!2sin"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="w-full h-full"
              title="Taj Press Club Location"></iframe>
          </div>

          <!-- Office Hours -->
          <div
            class="bg-gradient-to-br from-primary to-primary-hover rounded-lg shadow-xl p-8 text-white"
          >
            <h3 class="font-serif text-2xl font-bold mb-6 text-accent">
              Office Hours
            </h3>

            <div class="space-y-4">
              <div
                class="flex justify-between items-center pb-3 border-b border-white/20"
              >
                <span class="font-semibold">Monday - Friday</span>
                <span class="text-accent">10:00 AM - 6:00 PM</span>
              </div>
              <div
                class="flex justify-between items-center pb-3 border-b border-white/20"
              >
                <span class="font-semibold">Saturday</span>
                <span class="text-accent">10:00 AM - 4:00 PM</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-semibold">Sunday</span>
                <span class="text-accent">Closed</span>
              </div>
            </div>

            <div
              class="mt-8 p-4 bg-white/10 rounded-sm border border-accent/30"
            >
              <p class="text-sm italic text-white/90">
                <strong class="text-accent">Note:</strong> Special events aur meetings
                ke liye, kripya pehle se appointment lein.
              </p>
            </div>
          </div>

          <!-- Quick Contact -->
          <div class="bg-white rounded-lg shadow-xl p-8">
            <h3 class="font-serif text-xl font-bold text-text-heading mb-4">
              Quick Contact
            </h3>
            <div class="space-y-3">
              <a
                href="tel:+915622123456"
                class="flex items-center gap-3 text-primary hover:text-accent transition-colors group"
              >
                <div
                  class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center group-hover:bg-accent/20 transition-colors"
                >
                  <svg
                    class="w-5 h-5 text-primary"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <span class="font-semibold">+91-562-212-3456</span>
              </a>

              <a
                href="mailto:info@tajpressclub.org"
                class="flex items-center gap-3 text-primary hover:text-accent transition-colors group"
              >
                <div
                  class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center group-hover:bg-accent/20 transition-colors"
                >
                  <svg
                    class="w-5 h-5 text-primary"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <span class="font-semibold break-all"
                  >info@tajpressclub.org</span
                >
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===============================
       CTA SECTION
       =============================== -->
  <section class="w-full bg-white py-16">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2
        class="font-serif text-3xl sm:text-4xl font-bold text-text-heading mb-6"
      >
        Become a Member
      </h2>
      <p class="text-lg text-text-body mb-8 leading-relaxed">
        Taj Press Club ka hissa banein aur journalism community ko majboot
        karein
      </p>
      <a
        href="/membership/"
        class="inline-flex items-center gap-3 px-10 py-4 bg-gradient-to-r from-accent to-accent-hover text-primary font-bold text-lg rounded-sm hover:shadow-xl transition-all border-2 border-accent"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
          ></path>
        </svg>
        Join the Club
      </a>
    </div>
  </section>
</Layout>

<script>
  // Contact Form Handling
  const contactForm = document.getElementById("contactForm");
  const successMessage = document.getElementById("successMessage");

  if (contactForm && successMessage) {
    contactForm.addEventListener("submit", (e) => {
      e.preventDefault();

      // Here you would normally send the form data to your backend
      // For now, we'll just show the success message

      // Hide form and show success message
      contactForm.style.display = "none";
      successMessage.classList.remove("hidden");

      // Scroll to success message
      successMessage.scrollIntoView({ behavior: "smooth", block: "center" });

      // Optional: Reset form after 3 seconds and show it again
      setTimeout(() => {
        contactForm.reset();
        contactForm.style.display = "block";
        successMessage.classList.add("hidden");
      }, 5000);
    });
  }
</script>
