---
import Layout from "../layouts/Layout.astro";
---

<Layout page="membership">
  <!-- ===============================
       HERO SECTION
       =============================== -->
  <section
    class="relative w-full h-[60vh] flex items-center justify-center overflow-hidden"
  >
    <!-- Background Image -->
    <img
      src="../assets/images/membership-hero.jpg"
      alt="Taj Press Club Membership"
      class="absolute inset-0 w-full h-full object-cover"
    />

    <!-- Gradient Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-primary/90 via-primary/80 to-primary/90"
    >
    </div>

    <!-- Decorative Pattern -->
    <div
      class="absolute inset-0 opacity-5"
      style="background-image: url('data:image/svg+xml,%3Csvg width=\"
      60\"
      height='\"60\"'
      viewBox='\"0'
      0
      60
      60\"
      xmlns='\"http://www.w3.org/2000/svg\"%3E%3Cpath'
      d='\"M30'
      0l30
      30-30
      30L0
      30z\"
      fill='\"%23D4AF37\"'
      fill-opacity='\"0.4\"%3E%3C/path%3E%3C/svg%3E&apos;);"'
    >
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-5xl mx-auto px-4 text-center text-white">
      <div class="mb-6">
        <span
          class="inline-block px-5 py-2 bg-accent/20 border-2 border-accent rounded-sm"
        >
          <span class="text-accent font-bold text-sm tracking-widest uppercase"
            >Join Our Community</span
          >
        </span>
      </div>

      <h1
        class="font-serif text-5xl sm:text-6xl md:text-7xl font-bold mb-6 text-accent"
      >
        Membership
      </h1>

      <div class="flex items-center justify-center gap-3 mb-6">
        <div class="w-16 h-px bg-accent"></div>
        <div class="w-3 h-3 rotate-45 bg-accent"></div>
        <div class="w-16 h-px bg-accent"></div>
      </div>

      <p
        class="text-xl sm:text-2xl max-w-3xl mx-auto opacity-95 leading-relaxed"
      >
        Agra ke pratishthit press club ka hissa banein
      </p>
    </div>
  </section>

  <!-- ===============================
       MEMBERSHIP BENEFITS
       =============================== -->
  <section class="w-full bg-white py-20">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <div
          class="inline-block px-5 py-2 bg-accent/10 border border-accent/30 rounded-sm mb-6"
        >
          <span class="text-accent font-bold text-sm tracking-widest uppercase"
            >Why Join Us</span
          >
        </div>
        <h2
          class="font-serif text-4xl sm:text-5xl font-bold text-text-heading mb-4"
        >
          Membership Benefits
        </h2>
        <div class="flex items-center justify-center gap-3 mt-4">
          <div class="w-16 h-px bg-accent"></div>
          <div class="w-3 h-3 rotate-45 bg-accent"></div>
          <div class="w-16 h-px bg-accent"></div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Benefit 1 -->
        <div
          class="group bg-section-bg p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent"
              >workspace_premium</span
            >
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Professional Recognition
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Pratishthit press club ki membership aapki professional credibility
            ko badhati hai
          </p>
        </div>

        <!-- Benefit 2 -->
        <div
          class="group bg-section-bg p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent">diversity_3</span>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Networking Opportunities
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Industry experts aur fellow journalists ke saath connect karein aur
            grow karein
          </p>
        </div>

        <!-- Benefit 3 -->
        <div
          class="group bg-section-bg p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent">school</span>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Training & Workshops
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Regular seminars, workshops aur skill development programs mein
            participate karein
          </p>
        </div>

        <!-- Benefit 4 -->
        <div
          class="group bg-section-bg p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent"
              >business_center</span
            >
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Exclusive Facilities
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Library, conference hall, tech center aur sabhi amenities ka
            unlimited access
          </p>
        </div>

        <!-- Benefit 5 -->
        <div
          class="group bg-section-bg p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent">gavel</span>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Legal Support
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Professional matters mein guidance aur support patrakar community se
          </p>
        </div>

        <!-- Benefit 6 -->
        <div
          class="group bg-section-bg p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent">event</span>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Event Access
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Exclusive events, press conferences aur media gatherings mein
            priority entry
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ===============================
       MEMBERSHIP TYPES
       =============================== -->
  <section class="w-full bg-section-bg py-20">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <div
          class="inline-block px-5 py-2 bg-primary/10 border border-primary/30 rounded-sm mb-6"
        >
          <span class="text-primary font-bold text-sm tracking-widest uppercase"
            >Choose Your Plan</span
          >
        </div>
        <h2
          class="font-serif text-4xl sm:text-5xl font-bold text-text-heading mb-4"
        >
          Membership Categories
        </h2>
        <div class="flex items-center justify-center gap-3 mt-4">
          <div class="w-16 h-px bg-accent"></div>
          <div class="w-3 h-3 rotate-45 bg-accent"></div>
          <div class="w-16 h-px bg-accent"></div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Regular Member -->
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
          <div
            class="bg-gradient-to-br from-primary to-primary-hover text-white p-8 text-center"
          >
            <span class="material-icons text-6xl text-accent mb-4">person</span>
            <h3 class="font-serif text-2xl font-bold mb-2">Regular Member</h3>
            <p class="text-white/90">Working Journalists</p>
          </div>

          <div class="p-8">
            <div class="text-center mb-8">
              <div class="text-4xl font-bold text-primary mb-2">₹5,000</div>
              <p class="text-text-muted">Annual Fee</p>
            </div>

            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Full access to all facilities</span
                >
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Voting rights in elections</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Free training workshops</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Member ID card</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Event participation</span>
              </li>
            </ul>

            <a
              href="#apply"
              class="block w-full text-center px-6 py-3 bg-primary text-white font-bold rounded-sm hover:bg-primary-hover transition-colors"
            >
              Apply Now
            </a>
          </div>
        </div>

        <!-- Life Member (Featured) -->
        <div
          class="bg-white rounded-lg shadow-2xl overflow-hidden border-4 border-accent transform lg:scale-105"
        >
          <div class="bg-accent text-center py-2">
            <span
              class="text-primary font-bold text-sm tracking-widest uppercase"
              >Most Popular</span
            >
          </div>

          <div
            class="bg-gradient-to-br from-accent to-accent-hover text-primary p-8 text-center"
          >
            <span class="material-icons text-6xl mb-4">stars</span>
            <h3 class="font-serif text-2xl font-bold mb-2">Life Member</h3>
            <p class="text-primary/90">One-time Payment</p>
          </div>

          <div class="p-8">
            <div class="text-center mb-8">
              <div class="text-4xl font-bold text-primary mb-2">₹50,000</div>
              <p class="text-text-muted">Lifetime Access</p>
            </div>

            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">All Regular Member benefits</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Priority facility booking</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Guest privileges (2 per year)</span
                >
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Lifetime recognition</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Special event invitations</span>
              </li>
            </ul>

            <a
              href="#apply"
              class="block w-full text-center px-6 py-3 bg-gradient-to-r from-accent to-accent-hover text-primary font-bold rounded-sm hover:shadow-lg transition-all border-2 border-accent"
            >
              Apply Now
            </a>
          </div>
        </div>

        <!-- Associate Member -->
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
          <div
            class="bg-gradient-to-br from-primary to-primary-hover text-white p-8 text-center"
          >
            <span class="material-icons text-6xl text-accent mb-4">group</span>
            <h3 class="font-serif text-2xl font-bold mb-2">Associate Member</h3>
            <p class="text-white/90">Media Organizations</p>
          </div>

          <div class="p-8">
            <div class="text-center mb-8">
              <div class="text-4xl font-bold text-primary mb-2">₹10,000</div>
              <p class="text-text-muted">Annual Fee</p>
            </div>

            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Organization representation</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Conference hall access</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Networking opportunities</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Event sponsorship options</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="material-icons text-accent">check_circle</span>
                <span class="text-text-body">Brand visibility</span>
              </li>
            </ul>

            <a
              href="#apply"
              class="block w-full text-center px-6 py-3 bg-primary text-white font-bold rounded-sm hover:bg-primary-hover transition-colors"
            >
              Apply Now
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>



  <!-- ===============================
       ELIGIBILITY & PROCESS
       =============================== -->
  <section class="w-full bg-white py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Eligibility -->
        <div
          class="bg-section-bg p-10 rounded-lg shadow-xl border-l-8 border-primary"
        >
          <div class="flex items-center gap-4 mb-6">
            <div
              class="w-16 h-16 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center"
            >
              <span class="material-icons text-4xl text-accent">rule</span>
            </div>
            <h3 class="font-serif text-3xl font-bold text-primary">
              Eligibility Criteria
            </h3>
          </div>

          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <span class="material-icons text-accent mt-1">arrow_right</span>
              <div>
                <p class="font-semibold text-text-heading">Active Journalist</p>
                <p class="text-text-body text-sm">
                  Recognized media organization mein kaam kar rahe hon
                </p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="material-icons text-accent mt-1">arrow_right</span>
              <div>
                <p class="font-semibold text-text-heading">Press Card</p>
                <p class="text-text-body text-sm">
                  Valid press accreditation card
                </p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="material-icons text-accent mt-1">arrow_right</span>
              <div>
                <p class="font-semibold text-text-heading">Experience</p>
                <p class="text-text-body text-sm">
                  Minimum 1 year journalism experience
                </p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="material-icons text-accent mt-1">arrow_right</span>
              <div>
                <p class="font-semibold text-text-heading">Recommendation</p>
                <p class="text-text-body text-sm">
                  2 existing members ka recommendation (preferred)
                </p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="material-icons text-accent mt-1">arrow_right</span>
              <div>
                <p class="font-semibold text-text-heading">Good Standing</p>
                <p class="text-text-body text-sm">
                  Professional ethics aur conduct ki adherence
                </p>
              </div>
            </li>
          </ul>
        </div>

        <!-- Application Process -->
        <div
          class="bg-section-bg p-10 rounded-lg shadow-xl border-l-8 border-accent"
        >
          <div class="flex items-center gap-4 mb-6">
            <div
              class="w-16 h-16 bg-gradient-to-br from-accent to-accent-hover rounded-full flex items-center justify-center"
            >
              <span class="material-icons text-4xl text-primary"
                >how_to_reg</span
              >
            </div>
            <h3 class="font-serif text-3xl font-bold text-primary">
              Application Process
            </h3>
          </div>

          <div class="space-y-6">
            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-10 h-10 bg-accent text-primary rounded-full flex items-center justify-center font-bold"
              >
                1
              </div>
              <div>
                <p class="font-semibold text-text-heading mb-1">
                  Fill Application Form
                </p>
                <p class="text-text-body text-sm">
                  Online ya offline application form submit karein
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-10 h-10 bg-accent text-primary rounded-full flex items-center justify-center font-bold"
              >
                2
              </div>
              <div>
                <p class="font-semibold text-text-heading mb-1">
                  Submit Documents
                </p>
                <p class="text-text-body text-sm">
                  Required documents aur photographs submit karein
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-10 h-10 bg-accent text-primary rounded-full flex items-center justify-center font-bold"
              >
                3
              </div>
              <div>
                <p class="font-semibold text-text-heading mb-1">
                  Pay Membership Fee
                </p>
                <p class="text-text-body text-sm">
                  Applicable membership fee ka payment karein
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-10 h-10 bg-accent text-primary rounded-full flex items-center justify-center font-bold"
              >
                4
              </div>
              <div>
                <p class="font-semibold text-text-heading mb-1">
                  Committee Review
                </p>
                <p class="text-text-body text-sm">
                  Application ko executive committee review karegi
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-10 h-10 bg-accent text-primary rounded-full flex items-center justify-center font-bold"
              >
                5
              </div>
              <div>
                <p class="font-semibold text-text-heading mb-1">
                  Approval & Welcome
                </p>
                <p class="text-text-body text-sm">
                  Approval ke baad membership card issue hoga
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===============================
     TAJ PRESS CLUB RENEWAL FORM
     =============================== -->
  <section
    id="apply"
    class="w-full bg-gradient-to-br from-primary via-primary-hover to-primary py-20 relative overflow-hidden"
  >
    <div class="max-w-4xl mx-auto px-4 relative z-10">
      <!-- Heading -->
      <div class="text-center mb-12 text-white">
        <h2 class="font-serif text-4xl sm:text-5xl font-bold mb-4 text-accent">
          TAJ PRESS CLUB, AGRA
        </h2>
        <p class="text-lg opacity-95">Renewal Membership Form</p>
      </div>

      <!-- Form Card -->
      <div class="bg-white rounded-lg shadow-2xl p-8 lg:p-12">
        <form class="space-y-6">
          <!-- Grid -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Left Fields -->
            <div class="md:col-span-2 space-y-5">
              <div>
                <label class="block text-sm font-bold uppercase mb-2"
                  >Name</label
                >
                <input
                  type="text"
                  placeholder="Enter full name"
                  class="w-full px-4 py-3 border-2 rounded-sm outline-none focus:border-accent"
                />
              </div>

              <div>
                <label class="block text-sm font-bold uppercase mb-2"
                  >Father’s Name</label
                >
                <input
                  type="text"
                  placeholder="Enter father’s name"
                  class="w-full px-4 py-3 border-2 rounded-sm outline-none focus:border-accent"
                />
              </div>

              <div>
                <label class="block text-sm font-bold uppercase mb-2"
                  >Address</label
                >
                <input
                  type="text"
                  placeholder="Enter address"
                  class="w-full px-4 py-3 border-2 rounded-sm outline-none focus:border-accent"
                />
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-bold uppercase mb-2"
                    >Date of Birth</label
                  >
                  <input
                    type="date"
                    class="w-full px-4 py-3 border-2 rounded-sm outline-none focus:border-accent"
                  />
                </div>

                <div>
                  <label class="block text-sm font-bold uppercase mb-2"
                    >Blood Group</label
                  >
                  <input
                    type="text"
                    placeholder="e.g. O+"
                    class="w-full px-4 py-3 border-2 rounded-sm outline-none focus:border-accent"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-bold uppercase mb-2"
                    >Mobile No</label
                  >
                  <input
                    type="tel"
                    placeholder="+91 XXXXX XXXXX"
                    class="w-full px-4 py-3 border-2 rounded-sm outline-none focus:border-accent"
                  />
                </div>

                <div>
                  <label class="block text-sm font-bold uppercase mb-2"
                    >Emergency No</label
                  >
                  <input
                    type="tel"
                    placeholder="+91 XXXXX XXXXX"
                    class="w-full px-4 py-3 border-2 rounded-sm outline-none focus:border-accent"
                  />
                </div>
              </div>

              <div>
                <label class="block text-sm font-bold uppercase mb-2">
                  News Paper / Channel Name
                </label>
                <input
                  type="text"
                  placeholder="Organization name"
                  class="w-full px-4 py-3 border-2 rounded-sm outline-none focus:border-accent"
                />
              </div>
            </div>

            <!-- PHOTO UPLOAD -->
            <div class="flex flex-col items-center gap-3">
              <label class="block text-sm font-bold uppercase">Photograph</label
              >

              <label
