---
import Layout from "../layouts/Layout.astro";
---

<Layout page="events">
  <!-- ===============================
       HERO SECTION
       =============================== -->
  <section
    class="relative w-full h-[60vh] flex items-center justify-center overflow-hidden"
  >
    <!-- Background Image -->
    <img
      src="../assets/images/events-hero.jpg"
      alt="Taj Press Club Events"
      class="absolute inset-0 w-full h-full object-cover"
    />

    <!-- Gradient Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-primary/90 via-primary/80 to-primary/90"
    >
    </div>

    <!-- Decorative Pattern -->
    <div
      class="absolute inset-0 opacity-5"
      style="background-image: url('data:image/svg+xml,%3Csvg width=\"
      60\"
      height='\"60\"'
      viewBox='\"0'
      0
      60
      60\"
      xmlns='\"http://www.w3.org/2000/svg\"%3E%3Cpath'
      d='\"M30'
      0l30
      30-30
      30L0
      30z\"
      fill='\"%23D4AF37\"'
      fill-opacity='\"0.4\"%3E%3C/path%3E%3C/svg%3E&apos;);"'
    >
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-5xl mx-auto px-4 text-center text-white">
      <div class="mb-6">
        <span
          class="inline-block px-5 py-2 bg-accent/20 border-2 border-accent rounded-sm"
        >
          <span class="text-accent font-bold text-sm tracking-widest uppercase"
            >Seminars & Workshops</span
          >
        </span>
      </div>

      <h1
        class="font-serif text-5xl sm:text-6xl md:text-7xl font-bold mb-6 text-accent"
      >
        Events
      </h1>

      <div class="flex items-center justify-center gap-3 mb-6">
        <div class="w-16 h-px bg-accent"></div>
        <div class="w-3 h-3 rotate-45 bg-accent"></div>
        <div class="w-16 h-px bg-accent"></div>
      </div>

      <p
        class="text-xl sm:text-2xl max-w-3xl mx-auto opacity-95 leading-relaxed"
      >
        Professional development aur networking ke avsar
      </p>
    </div>
  </section>

  <!-- ===============================
       UPCOMING EVENTS
       =============================== -->
  <section class="w-full bg-white py-20">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <div
          class="inline-block px-5 py-2 bg-accent/10 border border-accent/30 rounded-sm mb-6"
        >
          <span class="text-accent font-bold text-sm tracking-widest uppercase"
            >Coming Soon</span
          >
        </div>
        <h2
          class="font-serif text-4xl sm:text-5xl font-bold text-text-heading mb-4"
        >
          Upcoming Events
        </h2>
        <div class="flex items-center justify-center gap-3 mt-4">
          <div class="w-16 h-px bg-accent"></div>
          <div class="w-3 h-3 rotate-45 bg-accent"></div>
          <div class="w-16 h-px bg-accent"></div>
        </div>
      </div>

      <div class="space-y-8">
        <!-- Event 1 - Holi Festival -->
        <div
          class="bg-section-bg rounded-lg shadow-xl overflow-hidden hover:shadow-2xl transition-shadow"
        >
          <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 p-8">
            <!-- Date Badge -->
            <div class="lg:col-span-1">
              <div
                class="bg-gradient-to-br from-accent to-accent-hover text-primary p-6 rounded-lg text-center shadow-lg"
              >
                <div class="text-4xl font-bold mb-2">3-4</div>
                <div class="text-lg font-semibold mb-1">March</div>
                <div class="text-sm">2026</div>
                <div class="mt-4 pt-4 border-t-2 border-primary/20">
                  <span class="material-icons text-3xl">celebration</span>
                </div>
              </div>
            </div>

            <!-- Event Details -->
            <div class="lg:col-span-3">
              <div class="flex items-start gap-3 mb-4">
                <span class="material-icons text-accent text-3xl">festival</span
                >
                <div>
                  <h3 class="font-serif text-2xl font-bold text-primary mb-2">
                    Holi Festival Celebration
                  </h3>
                  <p class="text-text-body leading-relaxed mb-4">
                    Rangotsav aur cultural celebration. Media fraternity ke
                    saath Holi ka tyohar manayein. Traditional snacks, music aur
                    rangon ka jashn.
                  </p>
                </div>
              </div>

              <div class="flex flex-wrap gap-6 text-sm">
                <div class="flex items-center gap-2">
                  <span class="material-icons text-accent">schedule</span>
                  <span class="text-text-body">11:00 AM - 3:00 PM</span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="material-icons text-accent">location_on</span>
                  <span class="text-text-body">Club Open Grounds</span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="material-icons text-accent">people</span>
                  <span class="text-text-body">Members & Families</span>
                </div>
              </div>

              <div class="mt-6">
                <a
                  href="#register"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-accent to-accent-hover text-primary font-bold rounded-sm hover:shadow-lg transition-all border-2 border-accent"
                >
                  <span class="material-icons">how_to_reg</span>
                  Register Now
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===============================
       EVENT CATEGORIES
       =============================== -->
  <section class="w-full bg-section-bg py-20">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <div
          class="inline-block px-5 py-2 bg-primary/10 border border-primary/30 rounded-sm mb-6"
        >
          <span class="text-primary font-bold text-sm tracking-widest uppercase"
            >What We Organize</span
          >
        </div>
        <h2
          class="font-serif text-4xl sm:text-5xl font-bold text-text-heading mb-4"
        >
          Event Categories
        </h2>
        <div class="flex items-center justify-center gap-3 mt-4">
          <div class="w-16 h-px bg-accent"></div>
          <div class="w-3 h-3 rotate-45 bg-accent"></div>
          <div class="w-16 h-px bg-accent"></div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Workshops -->
        <div
          class="group bg-white p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent">construction</span
            >
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Workshops
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Practical skills aur hands-on training sessions for professional
            development
          </p>
        </div>

        <!-- Seminars -->
        <div
          class="group bg-white p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent">menu_book</span>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Seminars
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Industry experts ke saath knowledge sharing aur discussion sessions
          </p>
        </div>

        <!-- Press Conferences -->
        <div
          class="group bg-white p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent">mic</span>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Press Conferences
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Important announcements aur media interactions ke liye platform
          </p>
        </div>

        <!-- Networking Events -->
        <div
          class="group bg-white p-8 rounded-lg shadow-lg hover:shadow-2xl transition-all border-t-8 border-primary hover:border-accent"
        >
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-full flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform"
          >
            <span class="material-icons text-5xl text-accent">diversity_3</span>
          </div>
          <h3
            class="font-serif text-xl font-bold text-text-heading mb-4 text-center"
          >
            Networking
          </h3>
          <p class="text-text-body text-center leading-relaxed">
            Media professionals ke liye connection aur collaboration
            opportunities
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ===============================
       PAST EVENTS GALLERY
       =============================== -->
  <section class="w-full bg-white py-20">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Section Header (unchanged) -->
      <div class="text-center mb-16">
        <div
          class="inline-block px-5 py-2 bg-accent/10 border border-accent/30 rounded-sm mb-6"
        >
          <span class="text-accent font-bold text-sm tracking-widest uppercase"
            >Memories</span
          >
        </div>
        <h2
          class="font-serif text-4xl sm:text-5xl font-bold text-text-heading mb-4"
        >
          Past Events Gallery
        </h2>
        <div class="flex items-center justify-center gap-3 mt-4">
          <div class="w-16 h-px bg-accent"></div>
          <div class="w-3 h-3 rotate-45 bg-accent"></div>
          <div class="w-16 h-px bg-accent"></div>
        </div>
      </div>

      <!-- Gallery -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Gallery Item -->
        <div class="overflow-hidden rounded-lg shadow-xl">
          <img
            src="../assets/images/event1.jpg"
            alt="Past Event"
            class="w-full h-80 object-cover transition-transform duration-500 hover:scale-110"
          />
        </div>

        <div class="overflow-hidden rounded-lg shadow-xl">
          <img
            src="../assets/images/event2.jpg"
            alt="Past Event"
            class="w-full h-80 object-cover transition-transform duration-500 hover:scale-110"
          />
        </div>

        <div class="overflow-hidden rounded-lg shadow-xl">
          <img
            src="../assets/images/event3.jpg"
            alt="Past Event"
            class="w-full h-80 object-cover transition-transform duration-500 hover:scale-110"
          />
        </div>

        <div class="overflow-hidden rounded-lg shadow-xl">
          <img
            src="../assets/images/event4.jpg"
            alt="Past Event"
            class="w-full h-80 object-cover transition-transform duration-500 hover:scale-110"
          />
        </div>

        <div class="overflow-hidden rounded-lg shadow-xl">
          <img
            src="../assets/images/event5.jpg"
            alt="Past Event"
            class="w-full h-80 object-cover transition-transform duration-500 hover:scale-110"
          />
        </div>

        <div class="overflow-hidden rounded-lg shadow-xl">
          <img
            src="../assets/images/event6.jpg"
            alt="Past Event"
            class="w-full h-80 object-cover transition-transform duration-500 hover:scale-110"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- ===============================
       EVENT REGISTRATION
       =============================== -->
  <section
    id="register"
    class="w-full bg-gradient-to-br from-primary via-primary-hover to-primary py-20 relative overflow-hidden"
  >
    <div
      class="absolute inset-0 opacity-5"
      style="background-image: url('data:image/svg+xml,%3Csvg width=\"
      80\"
      height='\"80\"'
      viewBox='\"0'
      0
      80
      80\"
      xmlns='\"http://www.w3.org/2000/svg\"%3E%3Cpath'
      d='\"M0'
      0h80v80H0z\"
      fill='\"none\"/%3E%3Cpath'
      d='\"M0'
      40h80M40
      0v80\"
      stroke='\"%23D4AF37\"'
      stroke-width='\"1\"/%3E%3C/svg%3E&apos;);"'
    >
    </div>

    <div class="max-w-3xl mx-auto px-4 relative z-10">
      <div class="text-center mb-12 text-white">
        <h2 class="font-serif text-4xl sm:text-5xl font-bold mb-6 text-accent">
          Register for Event
        </h2>
        <p class="text-lg opacity-95">
          Aane wale events mein participate karne ke liye register karein
        </p>
      </div>

      <div class="bg-white rounded-lg shadow-2xl p-8 lg:p-12">
        <form id="eventForm" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
              >
                Full Name <span class="text-accent">*</span>
              </label>
              <input
                type="text"
                required
                class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors"
                placeholder="Your name"
              />
            </div>

            <div>
              <label
                class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
              >
                Email <span class="text-accent">*</span>
              </label>
              <input
                type="email"
                required
                class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors"
                placeholder="your.email@example.com"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
              >
                Phone Number <span class="text-accent">*</span>
              </label>
              <input
                type="tel"
                required
                class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors"
                placeholder="+91 98765 43210"
              />
            </div>

            <div>
              <label
                class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
              >
                Select Event <span class="text-accent">*</span>
              </label>
              <select
                required
                class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors bg-white"
              >
                <option value="">Choose event</option>
                <option value="republic-day"
                  >Republic Day Celebration - Jan 26</option
                >
                <option value="digital-journalism"
                  >Digital Journalism Workshop - Feb 25</option
                >
                <option value="holi-festival"
                  >Holi Festival Celebration - Mar 3-4</option
                >
                <option value="press-freedom"
                  >Press Freedom Seminar - Mar 10</option
                >
                <option value="networking"
                  >Networking Meet & Greet - Mar 22</option
                >
                <option value="photography"
                  >Professional Photography Workshop - Apr 8</option
                >
                <option value="media-awards"
                  >Annual Press Club Awards - Apr 18</option
                >
              </select>
            </div>
          </div>

          <div>
            <label
              class="block text-sm font-bold text-text-heading mb-2 uppercase tracking-wide"
            >
              Organization/Affiliation
            </label>
            <input
              type="text"
              class="w-full px-4 py-3 border-2 border-border-soft focus:border-accent focus:outline-none rounded-sm transition-colors"
              placeholder="Your organization"
            />
          </div>

          <button
            type="submit"
            class="w-full flex items-center justify-center gap-3 px-10 py-4 bg-gradient-to-r from-accent to-accent-hover text-primary font-bold text-lg rounded-sm hover:shadow-xl transition-all border-2 border-accent"
          >
            <span class="material-icons">how_to_reg</span>
            Complete Registration
          </button>
        </form>

        <div
          id="eventSuccessMsg"
          class="hidden mt-6 p-6 bg-green-50 border-2 border-green-500 rounded-sm"
        >
          <div class="flex items-center gap-3">
            <span class="material-icons text-green-500 text-3xl"
              >check_circle</span
            >
            <p class="text-green-700 font-semibold">
              Registration successful! You'll receive confirmation via email.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  const eventForm = document.getElementById("eventForm");
  const eventSuccessMsg = document.getElementById("eventSuccessMsg");

  if (eventForm && eventSuccessMsg) {
    eventForm.addEventListener("submit", (e) => {
      e.preventDefault();

      eventForm.style.display = "none";
      eventSuccessMsg.classList.remove("hidden");

      eventSuccessMsg.scrollIntoView({ behavior: "smooth", block: "center" });

      setTimeout(() => {
        eventForm.reset();
        eventForm.style.display = "block";
        eventSuccessMsg.classList.add("hidden");
      }, 5000);
    });
  }
</script>
